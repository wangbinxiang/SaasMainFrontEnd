<%- include('../layout/header') -%>
    <nav aria-label="You are here:" role="navigation" class="clearfix">
        <ul class="breadcrumbs onionLink">
            <li><a href="/">首页</a></li>
            <li>
                <span class="show-for-sr">Current: </span> 用户注册
            </li>
        </ul>
    </nav>

    <h1 class="row column user-margin">用户注册</h1>

    <form data-abide="ajax" noValidate id="formReg">
        <div data-abide-error class="alert callout alert-form-error" style="display:none">
            <p class="text-center"> 注册信息错误，请重新输入。</p>
        </div>
        <div class="row">
            <div class="small-10 medium-6 small-centered medium-centered columns">
                <label>
                    手机号
                    <input type="text" name="cellPhone" id="cellPhone" placeholder="请输入手机号码" required pattern="^1[0-9]{10}$" />
                    <span class="form-error">
                        请输入正确的手机号码
                    </span>
                </label>
                <label>
                    登录密码
                    <input type="password" name="password" id="password" pattern="alpha_numeric" placeholder="请输入登录密码" required />
                    <span class="form-error">
                        请输入登录密码
                    </span>
                </label>
                <label>
                    再次输入密码
                    <input type="password" name="rePassword" placeholder="请再次输入密码" required data-equalto="password" />
                    <span class="form-error">
                        密码输入不匹配
                    </span>
                </label>
                <label>
                    验证码
                    <span class="input-group">
                        <input class="input-group-field" name="code" type="number" id="codeInput" placeholder="验证码" required />
                        <span class="input-group-button">
                            <input type="button" class="button" id="btnCode" value="发送手机验证码" />
                        </span>
                        <span class="input-group-error">
                            <span class="form-error"><span>验证码不能为空</span><span class="blkHide">验证码错误</span></span>
                        </span>
                    </span>
                </label>
                <p class="help-text blkHide" id="codeSentNote">验证码发送成功</p>
            </div>
        </div>

        <div class="row form-para-note"></div>

        <div class="text-center form-submit-wrap">
            <button class="button large" type="submit" value="Submit" id="btnReg">注册</button>
            <button class="secondary button large" type="reset" value="Reset">重置</button>
        </div>

        <div class="row form-para-note">
            <div class="small-10 medium-6 small-centered medium-centered text-center columns">
                <a href="/signin">已注册用户登录</a>
            </div>
        </div>
    </form>
<%- include('../layout/footer') -%>